pipeline {
    agent any

    stages {
        stage('Checkout'){
            steps {
		        checkout([$class: 'GitSCM', branches: [[name: '*/main']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/alanadiprastyo/SecretsTest.git']]])
            }
        }
        
        stage('Trivy - Secret Scanning') {
            steps {
                sh('touch trivy-secret-report.html')
                sh('trivy fs . --format template --template "@/usr/local/share/trivy/templates/html.tpl" -o trivy-secret-report.html --exit-code 0 --severity CRITICAL')
            }
            post {
                always {
                    archiveArtifacts artifacts: 'trivy-secret-report.html', fingerprint: true
                }
            }
        }

      stage('Done') {
   	    steps {
                echo "Your Repo is safe!"
       		}
	    }
	    
    }
}
